<%= simple_form_for ([@post, @post.comments.build])  do |f| %>

<%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name  %>
    <%= f.input :body, as: :text, :input_html => { :rows => 5 } %>
   </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
