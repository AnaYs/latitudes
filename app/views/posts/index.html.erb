<%= render 'fullpage_script' %>
<div id="fullpage">
  <%= render 'home_page' %>
  <% @posts.each do |post| %>
    <div class="section" id="section<%= post.id %>">
      <h3><%= link_to post.title, post_path(post) %></h3>
      <p><%= post.abstract %></p>
      <p><%= post.created_at.strftime("%B %e, %Y") %></p>
    </div>
  <% end %>
</div>
