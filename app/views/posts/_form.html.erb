<%= simple_form_for @post  do |f| %>

<%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title  %>
    <%= f.input :abstract, as: :text, :input_html => { :rows => 3 } %>
    <%= f.input :content, :input_html => { :rows => 10 }%>
  </div>

  <%= f.input :photos, as: :attachinary %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
