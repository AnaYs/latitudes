<header class="navbar navbar-fixed-top navbar-inverse transparent">
  <div class="container">
    <%= link_to "Latitudes", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "About", "#myModal", :class => "btn", "data-toggle" => "modal" %></li>
        <% if user_signed_in? %>
          <% if admin? %>
            <li>
              <%= link_to new_post_path do %>
                <i class="fa fa-pencil-square-o"></i>  <%= t ".new_post", default: "Post" %>
              <% end %>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to edit_user_registration_path do %>
                    <i class="fa fa-pencil-square-o"></i> <%= t ".edit_profile", default: "Edit Profile" %>
                  <% end %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Sign out" %>
                  <% end %>
                </li>
              </ul>
            </li>
          <% end %>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete unless admin? %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
