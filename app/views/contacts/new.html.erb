<div class = "modal-dialog top-padding-1">
  <div class = "modal-content">
    <div class = "modal-header">
      <a href="/" class="btn btn-default centered" role="button">x</a>
      <h2 class= "modal-title">Contact</h1>
      <div class = "modal-body">
        <%= simple_form_for @contact, html: {class: "form-horizontal"} do |f| %>
          <%= f.input :name, :required => true %>
          <%= f.input :email, :required => true %>
          <%= f.input :message, :as => :text, :required => true, input_html: {rows: 10}%>
          <div class= "hidden">
            <%= f.input :nickname, :hint => 'Leave this field blank!' %>
          </div>
          <div>
            </br>
            <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<script>
  document.body.style.backgroundColor = "rgba(34,34,34,0.7)";
</script>
